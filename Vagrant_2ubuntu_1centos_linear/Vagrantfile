Vagrant.configure("2") do |config|
    config.vm.box_check_update = false
    config.ssh.insert_key = false

    # HOST1
    config.vm.define "host1-ubuntu" do |host1|
        host1.vm.box = "generic/ubuntu2204"
        host1.vm.hostname = "host1"
        host1.vm.network "private_network", ip: "10.10.0.10"

        host1.vm.provider "libvirt" do |lv|
            lv.memory = 1024
            lv.cpus = 2
            lv.default_prefix = ""
        end
    end

    # HOST2
    config.vm.define "host2-ubuntu" do |host2|
        host2.vm.box = "generic/ubuntu2204"
        host2.vm.hostname = "host2"
        host2.vm.network "private_network", ip: "10.10.0.11"
        
        host2.vm.provider "libvirt" do |lv|
            lv.memory = 1024
            lv.cpus = 2
            lv.default_prefix = ""
        end
    end

    # HOST3
    config.vm.define "host3-centos" do |host3|
        host3.vm.box = "centos/stream9"
        host3.vm.hostname = "host3"
        host3.vm.network "private_network", ip: "10.10.0.12"

        host3.vm.provider "libvirt" do |lv|
            lv.memory = 1024
            lv.cpus = 2
            lv.default_prefix = ""
        end
    end
end
